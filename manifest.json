{
    "background": {
        "scripts": ["background.js"]
    },
    "commands": {
        "copy-title-to-clipboard": {
            "description": "Copy title to clipboard",
            "suggested_key": {
                "default": "Ctrl+Shift+V",
                "mac": "Command+Shift+V"
            }
        }
    },
    "content_scripts": [
        {
            "js": ["content_script.js"],
            "matches": [
                "https://*.bugherd.com/*",
                "https://*.atlassian.net/*",
                "https://*.freshdesk.com/*",
                "https://*.visualstudio.com/*"
            ]
        }
    ],
    "description": "Webcoda Developer extension to extends Bugherd and JIRA functionalities",
    "icons": {
        "128": "icon128.png",
        "16": "icon16.png",
        "48": "icon48.png"
    },
    "manifest_version": 2,
    "name": "WebcodEx",
    "permissions": [
        "tabs",
        "contextMenus",
        "clipboardRead",
        "clipboardWrite",
        "notifications",
        "https://*.bugherd.com/*",
        "https://*.atlassian.net/*",
        "https://*.visualstudio.com/*"
    ],
    "update_url": "https://clients2.google.com/service/update2/crx",
    "version": "2.0.4"
}
